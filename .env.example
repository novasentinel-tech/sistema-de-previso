# TOTEM_DEEPSEA Environment Configuration
# Copy this to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Security - Store your API keys here
# Format: API_KEY_NAME=sk_your_secret_key_here
MASTER_API_KEY=sk_master_development_key_please_change_in_production

# Database/Storage
UPLOAD_DIR=/tmp/totem_deepsea_uploads
MODELS_DIR=/tmp/totem_deepsea_models
API_KEYS_FILE=.api_keys.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# LSTM Parameters
LSTM_LOOKBACK=24
LSTM_EPOCHS=100
LSTM_BATCH_SIZE=16

# Prophet Parameters
PROPHET_SEASONALITY=yearly

# Stock Analysis
STOCK_CACHE_HOURS=24
